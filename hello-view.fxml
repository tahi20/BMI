<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="223.0" prefWidth="242.0" spacing="20.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo3.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label text="Weight" />
         <TextField fx:id="weightText" onAction="#onCalcBMI" prefHeight="25.0" prefWidth="138.0">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
         </TextField>
      </children>
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label text="Height" />
         <TextField fx:id="heightText" onAction="#onCalcBMI" prefHeight="25.0" prefWidth="137.0">
            <HBox.margin>
               <Insets left="23.0" />
            </HBox.margin>
         </TextField>
      </children>
   </HBox>
   <Button mnemonicParsing="false" onAction="#onCalcBMI" text="Calculate BMI" />

    <Label fx:id="resultLabel" text="Result" />
</VBox>
